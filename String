package nicholas_praktikum5;

/**
 *
 * @author Praktikan
 */
public class Nicholas_Praktikum5 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        
        String firstname = "Nicholas";
        String lastname = "Elvis";
        
        //System.out.println(firstname);
        //System.out.println(lastname);
        
        String fullname = "Nicholas" + " " + "Elvis";
        String fullname2 = firstname + " " + lastname;
        
        //System.out.println(fullname);
        System.out.println(fullname2);
        
        String upper = fullname2.toUpperCase();
        String lower = fullname2.toLowerCase();
        
        System.out.println(upper);
        System.out.println(lower);
        
        int panjang = fullname2.length();    //panjang stringnya
        
        System.out.println(panjang);
        
        System.out.println(fullname.substring(2, 6)); /*Parameter pertama
menunjukkan index awal substring. Parameter kedua menunjukkan index
terakhir dari String yang diambil.*/
        
        int idx = fullname2.indexOf("vis"); //mencari letak dimana tulisannya
        System.out.println(idx);
   
    }
    
}
